<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/jemBtn"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="110dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/jemimg"></ImageButton>
        <ImageButton
            android:id="@+id/questBtn"
            android:layout_width="110dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/bookimg"
            android:onClick="questOnClick"></ImageButton>
        <ImageButton
            android:id="@+id/settingBtn"
            android:layout_width="110dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/settingimg"
            android:onClick="settingOnClick"></ImageButton>
        <ImageButton
            android:id="@+id/storeBtn"
            android:layout_width="110dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/storeimg"
            android:onClick="storeOnClick"></ImageButton>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/currentMoney"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:drawableLeft="@drawable/moneyimg"
            android:textSize="20dp"></TextView>
        <ProgressBar
            android:id="@+id/expBar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#F8F8F8"
            android:max="100"
            android:progressDrawable="@drawable/progressbar_design"></ProgressBar>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:background="@drawable/mainbackground">
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="남은시간 : "
                android:textSize="30dp"
                android:textStyle="bold"></TextView>
            <TextView
                android:id="@+id/timer"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text=""
                android:textSize="30dp"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/lettuceBtn"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:src="@drawable/lettuce"
                    android:scaleType="fitXY"
                    android:background="@drawable/roundcorner"></ImageButton>
                <ImageButton
                    android:id="@+id/tomatoBtn"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:src="@drawable/tomato"
                    android:scaleType="fitXY"
                    android:background="@drawable/roundcorner"></ImageButton>
                <ImageButton
                    android:id="@+id/onionBtn"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:src="@drawable/onion"
                    android:scaleType="fitXY"
                    android:background="@drawable/roundcorner"></ImageButton>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/speechballon"></ImageView>
                    <TextView
                        android:id="@+id/customerTv"
                        android:layout_width="120dp"
                        android:layout_height="80dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="12dp"></TextView>
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="right"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/moneypotion"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="right"
                    android:src="@drawable/moneypotionimg"
                    android:background="@android:color/transparent"></ImageButton>
                <ImageButton
                    android:id="@+id/exppotion"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="right"
                    android:src="@drawable/speedpotionimg"
                    android:background="@android:color/transparent"></ImageButton>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageButton
                        android:id="@+id/mozzalleraBtn"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:src="@drawable/mozzallera"
                        android:scaleType="fitXY"
                        android:background="@drawable/roundcorner"></ImageButton>
                    <ImageButton
                        android:id="@+id/americancheeseBtn"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:src="@drawable/americancheese"
                        android:scaleType="fitXY"
                        android:background="@drawable/roundcorner"></ImageButton>
                    <ImageButton
                        android:id="@+id/meatBtn"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:src="@drawable/meatimg"
                        android:scaleType="fitXY"
                        android:background="@drawable/roundcorner"></ImageButton>
                </LinearLayout>
                <Button
                    android:id="@+id/finishBtn"
                    android:layout_marginTop="30dp"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center"
                    android:background="@drawable/finishimg"></Button>
            </LinearLayout>
            <ImageButton
                android:id="@+id/customer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/good"
                android:background="@drawable/roundcorner"></ImageButton>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="vertical"
        android:background="@drawable/foodboard">
        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:background="@drawable/breadimg"></ImageView>
            <ImageView
                android:id="@+id/lettuceIv"
                android:layout_width="160dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:visibility="invisible"
                android:background="@drawable/lettuceonbread"></ImageView>
            <ImageView
                android:id="@+id/tomatoIv"
                android:layout_width="160dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:visibility="invisible"
                android:background="@drawable/tomatoonbread"></ImageView>
            <ImageView
                android:id="@+id/onionIv"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:visibility="invisible"
                android:background="@drawable/oniononbread"></ImageView>
            <ImageView
                android:id="@+id/cheeseIv"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:visibility="invisible"
                android:background="@drawable/cheeseonbread"></ImageView>
            <ImageView
                android:id="@+id/meatIv"
                android:layout_width="160dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:visibility="invisible"
                android:background="@drawable/meatimg"></ImageView>
        </FrameLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/tabLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:orientation="vertical">
        <Button
            android:id="@+id/tabSizeBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="확대/축소"></Button>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.tabs.TabLayout>
                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

    </LinearLayout>

</LinearLayout>